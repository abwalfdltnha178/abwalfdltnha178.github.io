{% assign cover_image = nil %}

{% if page.content %}
  {% capture page_content %}{{ page.content | strip_html }}{% endcapture %}
  {% assign cover_image = page_content | split: '<img ' | slice: 1, 1 %}
  {% if cover_image %}
    {% assign cover_image = cover_image[0] | split: ' ' | first %}
  {% endif %}
{% endif %}

{% if cover_image %}
  <meta property="og:image" content="{{ cover_image | absolute_url }}">
  <meta name="twitter:image" content="{{ cover_image | absolute_url }}">
{% endif %} 
