source 'https://rubygems.org'

gem 'github-pages', group: :jekyll_plugins

# Add the plugins you want to use
gem 'jekyll-sitemap'
gem 'jekyll-feed'
gem 'jekyll-seo-tag'
gem 'faraday-retry'

# قالب Minima به صورت پیش‌فرض توسط github-pages پشتیبانی می‌شود
gem 'minima'

# برجسته‌سازی کد با استفاده از rouge
gem 'rouge'

# چند زبانه سازی
gem 'jekyll-multiple-languages-plugin'

# مبدل Markdown
gem 'kramdown'
gem 'kramdown-parser-gfm'

# آلگولیا موتور جستجو
gem 'algoliasearch', '~> 1.27.5'
